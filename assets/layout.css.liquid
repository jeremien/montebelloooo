body {
    background-color: white;
    color: #0400DD;
}

a {
    color: #0400DD;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}


.container {
    display: flex;
    flex-direction: column;
    /* margin: 20px; */
    font-family: 'method', Courier, monospace;
}

.container--content {
    display: flex;
    flex-direction: row;
    margin-top: 60px;

}

.header {
    display: flex;
    height: 40px;
    width: 100%;
    justify-content: space-between;
    position: fixed;
    background-color: #00D14E;

    /* padding-top: 10px; */
    padding-left: 10px;
    z-index: 100;
}

.header--item {
    width: 430px;
    padding-top: 10px;
    /* padding-right: 20px; */
}

.right {
    text-align: right;
    padding-right: 40px;
}

.navigation {
    width: 200px;
    position: fixed;
    padding-left: 20px;
    /* padding-top: 10px; */
}

.navigation li {
    margin-bottom: 5px;
}

.content {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-left: 200px;
    /* margin-top: 90px; */
}

.content--item {
    width : 200px;
    padding-right: 20px;
}

figcaption {
    padding-top: 10px;
}


img {
    width: 100%;
}

.page {
    width: 40%;
    margin-left: 200px;
    /* margin-top: 70px; */
}

h1 {
    margin-bottom: 10px;
}

.product {
    display: flex;
    width: 100%;
    margin-left: 200px;
    /* margin-top: 90px; */
}

.product--info {
    width: 20%;
    padding-right: 10px;
    padding-left: 20px;
}

.product--info h1 {
    text-decoration: underline;
}

.product--info button {
    border: 1px solid #0400DD;;
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
}

.product-form input {
    border: 1px solid #0400DD;;
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: #0400DD;
}

.product--images {
    width: 50%;
    /* overflow: hidden; */
   
}

.product--images-container {
    /* height: 300px; */
    /* background-color: red; */
}

.product--images-photo {
    opacity: 0;
    position: absolute;
    top: 0;
    z-index: -1;
    width: 100%;
    margin: auto;
    /*object-fit: cover;
    height: 500px;*/
    /* padding: 1rem 4rem; */
    /* transition: transform .5s, opacity .5s, z-index .5s; */
    /* cursor: pointer; */
}

.product--images-photo.initial,
.product--images-photo.active {
    opacity: 1;
    position: relative;
    z-index: 1;
    /* transition: transform .5s, opacity .5s, z-index .5s; */
}

.product--images-btn {
    display: flex;
    justify-content: space-between;
}

.product--images-next,
.product--images-prev {
    cursor: pointer;
    z-index: 100;
}

.product--images-next:hover,
.product--images-prev:hover {
    text-decoration: underline;
}


p {
    margin-bottom: 10px;
}

ul {
    margin-bottom: 10px;
}

.panier {
    margin-left: 200px;
    /* margin-top: 70px; */
}

.collections {
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-left: 200px;
    /* margin-top: 70px; */
}

.collection--item {
    display: flex;
    flex-direction: column;
    
}

.collection--item figure {
    width: 200px;
}

.blog {
    width: 60%;
    margin-left: 200px;
    /* margin-top: 70px; */
    display: flex;
    flex-direction: column;
}

.blog article {
    width: 50%;
}

.blog figure {
    width: 50%;
}

.search {
    margin-left: 200px;

}

.search--form input {
    width: 100%;
    height: 20px;
    border: 1px solid #0400DD;;
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: #0400DD;
    margin-bottom: 10px;
}

.search--form select {
    border: 1px solid #0400DD;;
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: #0400DD;

}

.search--form button {
    border: 1px solid #0400DD;;
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: #0400DD;
}


.search--results {
    margin-top: 20px;
}

.search--results li {
    margin-bottom: 10px;
}