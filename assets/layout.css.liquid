:root {
    --main-font-color: #0400DD;
    --main-bg-color: #00D14E;  
}

body {
    background-color: white;
    color: var(--main-font-color);
}

a {
    color: #var(--main-font-color);
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}


.container {
    display: flex;
    flex-direction: column;
    /* margin: 20px; */
    font-family: 'method', Courier, monospace;
}

.container--content {
    display: flex;
    flex-direction: row;
    /* margin-top: 60px; */

}

.header {
    display: flex;
    height: 40px;
    width: 100%;
    justify-content: space-between;
    position: fixed;
    background-color: var(--main-bg-color);

    /* padding-top: 10px; */
    padding-left: 10px;
    z-index: 100;
}

.header a {
    color: var(--main-font-color);
}

.header a:visited {
    color: var(--main-font-color);
}

.header--item {
    width: 430px;
    padding-top: 10px;
    /* padding-right: 20px; */
}

.header--search {
    width: 50%;
    /* display: flex;
    flex-direction: row; */
    margin-top: 50px;
    /* margin-left: 50%;*/
    margin-right: 20px; 
    right: 0;
    position: fixed;
    z-index: 100;
}

.header-search--form input {
    width: 100%;
    height: 20px;
    border: 1px solid var(--main-font-color);
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: var(--main-font-color);
    margin-bottom: 10px;
    
}

.header-search--form input:focus {
    /* background-color: var(--main-bg-color); */
    /* opacity: 0.3; */
    outline: none;
    height: 40px;
    font-size: 1.5rem;
}

.footer {
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 100px; 
    /* justify-content: space-between; */
    /* position: fixed; */
    background-color: grey;
    padding-left: 10px;
    /* z-index: 100; */
    color: black;
    padding-top: 10px;
}

.footer span {
    margin-bottom: 5px;
}

.footer a {
    color: black;
}

.footer a:visited {
    color: black;
}

.right {
    text-align: right;
    padding-right: 40px;
}

.navigation {
    width: 200px;
    position: fixed;
    padding-left: 20px;
    padding-top: 50px;
}

.navigation li {
    margin-bottom: 5px;
}

.navigation a {
    color: var(--main-font-color);
}

.navigation a:visited {
    color: var(--main-font-color);
}

.content {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-left: 200px;
    margin-top: 100px;
}

.content--item {
    width : 200px;
    padding-right: 20px;
}

.content--item h1 {
    margin-bottom: 10px;
    font-size: 1rem;
    /* color: var(--main-font-color); */
    font-weight: bold;
    /* font-style: italic; */
}

.content--item h2 {
    margin-bottom: 10px;
    font-size: 1rem;
    color: var(--main-font-color);
    /* font-weight: bold; */
    /* font-style: italic; */
}

.content--item p {
    margin-bottom: 10px;
    font-size: 1rem;
    /* color: var(--main-bg-color); */
    font-style: italic;
}


figcaption {
    padding-top: 10px;
}


img {
    width: 100%;
}

.page {
    width: 40%;
    margin-left: 200px;
    margin-top: 100px;
    margin-bottom: 50px;
}

.product {
    display: flex;
    width: 100%;
    margin-top: 100px;
    margin-left: 200px;
    /* margin-top: 90px; */
    flex-direction: column;

}

.product--main {
    display: flex;
    flex-direction: row;
}

.product--info {
    width: 20%;
    padding-right: 10px;
    padding-left: 20px;
}

.product--info h1 {
    /* text-decoration: underline; */
    font-weight: bold;
    font-style: italic;
}

.product--info h2 {
    /* text-decoration: underline; */
    font-weight: bold;
    /* font-style: italic; */
    margin-bottom: 20px;
}

.product--info p {
    margin-top: 10px;
}

.product--info button {
    border: 1px solid var(--main-font-color);
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: var(--main-font-color);
}

.product-form input {
    border: 1px solid var(--main-font-color);
    padding: 5px;
    font-family: 'method', Courier, monospace;
    cursor: pointer;
    background-color: white;
    color: var(--main-font-color);
}

.product--images {
    width: 50%;
    /* overflow: hidden; */
   
}

.product--images-container {
    /* height: 300px; */
    /* background-color: red; */
}

.product--images-photo {
    opacity: 0;
    position: absolute;
    top: 0;
    z-index: -1;
    width: 100%;
    margin: auto;
    /*object-fit: cover;
    height: 500px;*/
    /* padding: 1rem 4rem; */
    /* transition: transform .5s, opacity .5s, z-index .5s; */
    /* cursor: pointer; */
}

.product--images-photo.initial,
.product--images-photo.active {
    opacity: 1;
    position: relative;
    z-index: 1;
    /* transition: transform .5s, opacity .5s, z-index .5s; */
}

.product--images-btn {
    display: flex;
    justify-content: space-between;
}

.product--images-next,
.product--images-prev {
    cursor: pointer;
    z-index: 100;
}

.product--images-next:hover,
.product--images-prev:hover {
    text-decoration: underline;
}

