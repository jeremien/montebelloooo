<div class="product">
    <p>{{ product.vendor }}</p>
    <ul>
    {% for tag in product.tags %} 
        <li>{{ tag }}</li>
    {% endfor %}
    </ul>
    <p>{{ product.price | money_without_trailing_zeros }}</p>
    <p>{{ product.title }}</p>
    <p>{{ product.description }}<p>
    
    {% form 'product' %}
        <!-- form content -->
        <input type="submit" value="Add to cart">
        {{ form | payment_button }}
    {% endform %}

    <ul>
    {% for image in product.images %}
        <li><img 
                src="{{ image | image_url }}" 
                loading="lazy"
                width="{{ image.width }}"
                 height="{{ image.height }}"
            /></li>
    {% endfor %}
    </ul>

</div>